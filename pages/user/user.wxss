.user_content .user_item{
  padding: 0 0 20rpx 0; 
}
.user_content .user_item navigator{
  background-color: #fff;
  color: #5a5a5a;
  font-size: 35rpx;
  top: 30rpx;
  padding: 20rpx 40rpx; 
  border-radius: 15rpx;
  position: relative;
}
.user_content .user_item .user_text{
  background-color: #fff;
  color: #5a5a5a;
  font-size: 35rpx;
  top: 30rpx;
  padding: 20rpx 40rpx; 
  border-radius: 15rpx;
  position: relative;
}
.user_content .user_item .user_line{
  padding: 4rpx 0 4rpx 0; 
}
.user_content .user_item .user_text button{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 0%;
  color: #fff;
  background-color: transparent;   /*按钮透明*/  
	border:none;				/*设置按钮边框*/
}
.user_content .user_item .user_text button::after{
  border:none;
}