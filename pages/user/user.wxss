/* pages/user/user.wxss */
page{
  background-color: #edece8;
  /* background-color: var(--themeColor); */
}
.user_info_wrap{
  height: 45vh;
  overflow: hidden;
  position: relative;
  /* background-color: var(--themeColor);  */
}
.user_info_wrap .user_image_wrap{
  position: relative; /* 相对定位 */
}
.user_info_wrap .user_image_wrap .user_background{
  height: 46vh;
  filter: blur(15rpx);   
  border-radius: 15rpx; 
  width: 100vw;
}
.user_info_wrap .user_image_wrap .user_info{
  position: absolute; /* 绝对定位 */
  left: 50%;
  transform: translateX(-50%);
  top: 30%;
  text-align: center; /* 文字水平居中 */
}
.user_info_wrap .user_image_wrap .user_info .user_icon{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%; /* 边框圆角 */
}
.user_info_wrap .user_image_wrap .user_info .user_name{
  color: #fff;
  margin-top: 35rpx;
  font-size: 40rpx;
  text-shadow: #5a5a5a 1px 0 0, #5a5a5a 0 1px 0, #5a5a5a -1px 0 0, #5a5a5a 0 -1px 0;
}
.user_info_wrap .user_button_back{
  height: 45vh;
  overflow: hidden;
  background-color: var(--themeColor);
}
.user_info_wrap .user_button_back .user_button{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 30%;
  padding: 30rpx;
}

